<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.malaganguo.athmsssm.dao.IHourDataDao">

    <!--查询小时所有时间平均温湿度-->
    <select id="hourAvgDataSelect" resultType="com.malaganguo.athmsssm.model.HourDataModel" parameterType="com.malaganguo.athmsssm.model.ConditionModel" >
        SELECT DATE,AVG(temperature) as temperature,AVG(humidity) as humidity FROM #{table_name } WHERE DATE = #{hourtime} ;
    </select>
    <select id="hhourAvgDataSelect" resultType="com.malaganguo.athmsssm.model.HourDataModel" >
        SELECT date,avg(temperature) as temperature,avg(humidity) as humidity FROM site_1 WHERE DATE = '2019 3 11 19' ;
    </select>

